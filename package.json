{
  "name": "vivo-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "lodash": "^4.17.10",
    "mint-ui": "^2.2.13",
    "querystring": "^0.2.0",
    "vue": "^2.5.16",
    "vue-lazyload": "^1.2.4",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1",
    "vuex-persist": "^1.4.0",
    "vuex-router-sync": "^5.0.0"
  },
  "devDependencies": {
    "@vue/cli-plugin-babel": "^3.0.0-beta.15",
    "@vue/cli-plugin-eslint": "^3.0.0-beta.15",
    "@vue/cli-service": "^3.0.0-beta.15",
    "babel-plugin-lodash": "^3.3.3",
    "extract-text-webpack-plugin": "^3.0.2",
    "json-loader": "^0.5.7",
    "lint-staged": "^7.1.3",
    "lodash-webpack-plugin": "^0.11.5",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.3",
    "vue-svg-loader": "^0.5.0",
    "vue-template-compiler": "^2.5.16"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {
      "import/no-extraneous-dependencies": 0,
      "semi": 0,
      "no-debugger": 0,
      "no-console": 0,
      "comma-dangle": 0
    },
    "parserOptions": {
      "ecmaVersion": 8,
      "parser": "babel-eslint",
      "jsx": true,
      "experimentalObjectRestSpread": true
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "vue-cli-service lint",
      "git add"
    ],
    "*.vue": [
      "vue-cli-service lint",
      "git add"
    ]
  }
}
